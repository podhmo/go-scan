{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Person Schema",
    "description": "Schema for a Person",
    "$ref": "#/$defs/Person",
    "$defs": {
        "Person": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "age": {
                    "type": "integer"
                },
                "email": {
                    "type": "string"
                },
                "hobbies": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "profile": {
                    "$ref": "#/$defs/Profile"
                }
            },
            "required": [
                "name",
                "hobbies",
                "profile"
            ]
        },
        "Profile": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "team": {
                    "$ref": "#/$defs/Team"
                }
            },
            "required": [
                "title",
                "description"
            ]
        },
        "Team": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "members": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/Person"
                    },
                    "description": "Circular reference"
                }
            },
            "required": [
                "name",
                "members"
            ]
        }
    }
}

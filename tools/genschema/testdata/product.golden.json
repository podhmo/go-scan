{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Product Schema",
    "description": "Schema for a Product",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "string"
        },
        "price": {
            "type": "number",
            "minimum": 0
        },
        "attributes": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        },
        "is_available": {
            "type": "boolean"
        }
    },
    "required": [
        "id",
        "price",
        "attributes"
    ]
}
